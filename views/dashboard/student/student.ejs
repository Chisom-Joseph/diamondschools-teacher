<%- include("../../partials/header") %>
<main class="content">
  <div class="container-fluid p-0">

    <div class="mb-3">
      <h1 class="h3 d-inline align-middle">Student</h1><a class="badge bg-primary ms-2" href="/dashboard/all-students">All Students <i class="fas fa-fw fa-external-link-alt"></i></a>
    </div>

    <div class="row">

      <div class="col-xl-12">
        <div class="card">
          <div class="card-header">
            <div class="card-actions float-end">
              <div class="dropdown position-relative">
                <a href="#" data-bs-toggle="dropdown" data-bs-display="static">
                  <i class="align-middle" data-feather="more-horizontal"></i>
                </a>

                <div class="dropdown-menu dropdown-menu-end">
                  <a class="dropdown-item" href="#">Action</a>
                  <a class="dropdown-item" href="#">Another action</a>
                  <a class="dropdown-item" href="#">Something else here</a>
                </div>
              </div>
            </div>
            <h5 class="card-title mb-3">Aspitan details</h5>
            <div class="mb-0 d-flex gap-2 flex-wrap">
              <button class="btn btn-primary" disabled><i class="far fa-smile"></i> Approve Student</button>
              <button class="btn btn-warning" disabled><i class="fas fa-ban"></i> Block</button>
              <button class="btn btn-danger" disabled><i class="fas fa-times"></i> Delete Student</button>
            </div>
          </div>
          <div class="card-body">
            <div class="row g-5">
              <% if(alert.status === "error") { %>
              <div class="col-12">
                <div class="alert alert-danger alert-dismissible" role="alert">
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  <div class="alert-message">
                    <strong>Error!</strong> <%- alert.message %>
                  </div>
                </div>
              </div>
              <% } %>
              <% if(alert.status === "success") { %>
              <div class="col-12">
                <div class="alert alert-success alert-dismissible" role="alert">
                  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  <div class="alert-message pr-5">
                    <strong>Sucess!</strong> <%- alert.message %>
                  </div>
                </div>
              </div>
              <% } %>
              <div class="col-sm-12 col-lg-7">
                <table class="table table-sm mt-2 mb-4">
                  <tbody>
                    <tr>
                      <th>First Name</th>
                      <td><%= student.firstName %></td>
                    </tr>
                    <tr>
                      <th>Middle Name</th>
                      <td><%= student.middleName %></td>
                    </tr>
                    <tr>
                      <th>Last Name</th>
                      <td><%= student.lastName %></td>
                    </tr>
                    <tr>
                      <th>Gender</th>
                      <td><%= student.gender %></td>
                    </tr>
                    <tr>
                      <th>Religion</th>
                      <td><%= student.religion %></td>
                    </tr>
                    <tr>
                      <th>Nationality</th>
                      <td><%= student.country %></td>
                    </tr>
                    <tr>
                      <th>State Of Origin</th>
                      <td><%= student.stateOfOrigin %></td>
                    </tr>
                    <tr>
                      <th>Address</th>
                      <td><%= student.address %></td>
                    </tr>
                    <tr>
                      <th>Date Of Birth</th>
                      <td><%= student.dateOfBirth %></td>
                    </tr>
                    <tr>
                      <th>Guardian Full Name</th>
                      <td><a href="/dashboard/guardian/<%= student.guardian.id %>"><%= student.guardian.firstName %> <%= student.guardian.middleName %> <%= student.guardian.lastName %></a></td>
                    </tr>
                    <tr>
                      <th>Status</th>
                      <td>
                        <% if(student.status === true) { %>
                        <span class="badge bg-success">Active</span>
                        <% } else { %>
                        <span class="badge bg-danger">Not active</span>
                        <% } %>
                      </td>
                    </tr>
                  </tbody>
                </table>
              </div>

              <div class="col-sm-12 col-lg-5">
                <strong class="mb-2 d-block">Profile image</strong>
                <img class="img-fluid" src="<%= student.profileImageUrl %>" alt="<%= student.firstName %> <%= student.middleName %> <%= student.lastName %>">
              </div>
            </div>

          </div>
        </div>
      </div>
    </div>

  </div>
</main>
<!-- Modal -->
<div class="modal fade" id="centeredModalPrimary" tabindex="-1" style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <form action="?action=make-student" method="POST">
        <div class="modal-header">
          <h5 class="modal-title">Make Student</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body m-3">
          <p class="mb-0">Are you sure you want to make <b><%- student.firstName %> <%- student.middleName %> <%- student.lastName %></b> a student?</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success">Yes, Make student</button>
        </div>
      </form>
    </div>
  </div>
</div>
<%- include("../../partials/footer") %>